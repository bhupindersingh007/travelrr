<%- include('../partials/header') %>


<!-- Post Content-->
<article class="mb-5">
    <div class="container col-md-10 px-4 px-lg-5">
                
        <img src="/img/<%= post.thumbnail %>" alt="<%= post.thumbnail %>" 
        class="w-100 img-fluid mb-4 rounded object-fit-cover h-24">

        <h4 class="fw-semibold mb-3"><%= post.title %></h4>

        <div class="text-muted pb-3 border-bottom d-flex justify-content-between align-items-center mb-3">
                    
            
            <p class="text-muted mb-0"> 
                <svg viewBox="0 0 24 24" width="16" height="16" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline>
                </svg>

                <small><%= new Date(post.posted_at).toDateString() %></small>
            </p> 

            <% if(loggedUser){ %>

            <div>
                <a href="/posts/<%= post._id %>/edit" class="btn btn-warning"><i class="fa fa-edit"></i></a>

                <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" class="d-inline-block"
                onsubmit="return confirm('Are you sure?')">
                    <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                </form>

            </div>

            <% } %>



        </div>

            
        <%- post.content %>
        
    </div>
</article>

<%- include('../partials/footer') %>

