<%- include('../partials/header') %>


<!-- Post Content-->
<article class="mb-5">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8">
                
                <img src="/img/<%= post.thumbnail %>" alt="<%= post.thumbnail %>" 
                class="w-100 img-fluid mb-4 rounded object-fit-cover h-20">

                <h3 class="mb-3"><%= post.title %></h3>

                <div class="text-muted pb-3 border-bottom d-flex justify-content-between align-items-center mb-3">
                    
                    <span>
                        <i class="fa fa-clock me-1"></i> <%= new Date(post.posted_at).toDateString() %>
                    </span>


                    <% if(loggedUser){ %>

                    <div>
                        <a href="/posts/<%= post._id %>/edit" class="btn btn-warning"><i class="fa fa-edit"></i></a>

                        <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" class="d-inline-block"
                        onsubmit="return confirm('Are you sure?')">
                            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                        </form>

                    </div>

                    <% } %>



                </div>

            
                <%- post.content %>
            </div>
        </div>
    </div>
</article>

<%- include('../partials/footer') %>

